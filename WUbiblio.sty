% bibliography citation macros
%
%for use with urcstr bib style
\let\@internalcite\cite
% \cite{key} puts the name and date in the citation
\def\cite{\def\@commapen{-1000}\def\citename##1{##1}\@internalcite}
% \shortcite{key} puts just the date in the citation
\def\shortcite{\def\@commapen{1000}\def\citename##1{}\@internalcite}
\def\@biblabel#1{\def\citename##1{##1}[#1]\hfill}
%
% makebibliography
%
\def\makebibliography#1{\bibliographystyle{urcsbiblio}\bibliography{#1}}
%
% don't box citations and also add space between multiple citations
%
\def\@citex[#1]#2{\if@filesw\immediate\write\@auxout{\string\citation{#2}}\fi
  \def\@citea{}\@cite{\@for\@citeb:=#2\do
    {\@citea\def\@citea{;\penalty\@commapen\ }\@ifundefined
       {b@\@citeb}{{\bf ?}\@warning
       {Citation `\@citeb' on page \thepage \space undefined}}%
{\csname b@\@citeb\endcsname}}}{#1}}
